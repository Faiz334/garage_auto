

{% block title %}{% endblock %}

{% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

   <section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <!-- Colonne de gauche -->
      <div class="col-sm-6">
        <div class="px-5 ms-xl-4">
          <div class="mb-5">
          <br>
          <div class="mb-5 text-center">
          <img src="/img/quaiAlogo1.png" class="navbar-brand-img" alt="..." >
          </div>
          </div>
          <!-- Formulaire de connexion -->
          <div class="col-md-8 ">
          <br>
            <form action="#" method="post">
              <div class="form-group first">
                <label for="inputEmail">E-mail</label>
                <input type="email" value="{{ last_username }}" class="form-control" placeholder="email@gmail.com" name="email" id="inputEmail"  autocomplete="email" required autofocus>
              </div>
              <br>
              <div class="form-group last mb-3">
                <label for="password">Mot de passe</label>
                <input type="password" class="form-control" name="password" placeholder="" id="inputPassword" autocomplete="current-password" required>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
              </div>
              <div class="d-flex mb-5 align-items-center">
                <label class="control control--checkbox mb-0">
                  <span class="caption">Se souvenir de moi</span>
                  <input type="checkbox" checked="checked">
                  <div class="control__indicator"></div>
                </label>
              </div>
              <div class="pt-1 mb-4">
              <input type="submit" value="Se Connecter" class="btn btn-block btn-warning">
              </div>
            </form>
          </div>
          <!-- Fin du formulaire de connexion -->
        </div>
      </div>
      <!-- Fin de la colonne de gauche -->
      
      <!-- Colonne de droite -->
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="{{ asset('imageMain/garage_login.jpg') }}"
          alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
      <!-- Fin de la colonne de droite -->
    </div>
  </div>
</section>

</form>
{% endblock %}
